#!/bin/bash
USERID=`id -u`
if [ ! -e /tmp/emacs$USERID/server ]
then
	echo "Starting server."
	if [ `command -v systemctl >/devl/null 2>&1` ]; then
		systemctl --user start emacs
	else
		sudo /etc/init.d/emacs start
	fi
	while [ ! -e "/tmp/emacs$USERID/server" ] ; do sleep 1 ; done
fi

emacsclient -c "$@"
