#!/usr/bin/env sh

# Fail if python3 version is less than 3.10
PYTHON_VERSION=$(python3 -c 'import sys; print("{}.{}".format(sys.version_info[0], sys.version_info[1]))')
if [ "$(printf '%s\n' "3.10" "$PYTHON_VERSION" | sort -V | head -n1)" != "3.10" ]; then
    echo "Python 3.10+ is required. Found $PYTHON_VERSION. Exiting."
    exit 1
fi

no_inventory () {
    echo >&2 "You must specify the workstation type (personal or work)"
    exit 1
}

[ "$#" -eq 1 ] || no_inventory
[ -f "$1" ] || no_inventory

# Change to dir of script.
cd "${0%/*}"

if [ $(uname) = "Linux" ]; then
    platform="linux"
    if command -v apt > /dev/null; then
        sudo apt install -y python3-pip python3-venv libffi-dev libssl-dev build-essential
    fi
else
    platform="macos"
fi

# if [ ! $(command -v virtualenv) ]; then
#     echo "Virtualenv not found! Install virtualenv first."
#     exit 1
# fi

if [ ! -e ./env/bin/python ]; then
    echo "Initializing virtualenv..."
    # virtualenv ./env
    python3 -m venv ./env
fi

./env/bin/pip install -U pip
./env/bin/pip install -r ./requirements.txt
./env/bin/ansible-galaxy install -r ./requirements.yml

if sudo -n true 2>/dev/null; then
    ./env/bin/ansible-playbook -i $1 $platform.yml
else
    ./env/bin/ansible-playbook -i $1 $platform.yml -K
fi
